	"targetType": "executable",
	"dependencies": {
		"mir-algorithm": "~>3.7.18",
		"mir-random": "~>2.2.11",
		"mir-blas": "~>1.1.9"
	},
	"dflags-ldc": ["-mcpu=native"],
	"subConfigurations": {"mir-blas": "library", "comment": "Also try MKL like 'mkl-tbb-thread'"},
